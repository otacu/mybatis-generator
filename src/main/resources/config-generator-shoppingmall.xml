<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="myBatis3Tables" targetRuntime="MyBatis3">
        <!-- beginningDelimiter和endingDelimiter：指明数据库的用于标记数据库对象名的符号，比如ORACLE就是双引号，MYSQL默认是`反引号； -->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!-- 生成注释的插件 -->
        <plugin type="com.egoist.mybatis.generator.plugin.EgoistCommentPlugin"></plugin>
        <!-- 生成service的插件 -->
        <plugin type="com.egoist.mybatis.generator.plugin.EgoistServicePlugin"></plugin>

        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/shopping-mall?serverTimezone=UTC" userId="root"
                        password="123456">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.my.shoppingmall.pojo.po" targetProject="E:/yjs/my_code/mybatis-generator/src/main/generated">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false"/>
            <!-- 从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- targetProject:mapper映射文件生成的位置 -->
        <sqlMapGenerator targetPackage="com.my.shoppingmall.dao" targetProject="E:/yjs/my_code/mybatis-generator/src/main/generated">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <!-- targetPackage：mapper接口生成的位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.my.shoppingmall.dao" targetProject="E:/yjs/my_code/mybatis-generator/src/main/generated">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <!-- 指定数据库表 -->

        <table tableName="tb_shoppingmall_user" domainObjectName="User" delimitAllColumns="true"></table>

    </context>
</generatorConfiguration>
